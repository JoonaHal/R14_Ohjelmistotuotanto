<ContentPage
    x:Class="Mökinvaraus.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Mökinvarausjärjestelmä">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <Label Text="Mökinvarausjärjestelmä"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

            <Button Text=" Varausten hallinta"
                BackgroundColor="#FF9800"
                TextColor="White"
                FontSize="18"
                CornerRadius="12"
                Clicked="AvaaVarausPage_Clicked"
                HeightRequest="60"
                WidthRequest="250"
                HorizontalOptions="Center" />

            <Button Text=" Mökkien hallinta"
                BackgroundColor="#4CAF50"
                TextColor="White"
                FontSize="18"
                CornerRadius="12"
                Clicked="AvaaMokkiPage_Clicked"
                HeightRequest="60"
                WidthRequest="250"
                HorizontalOptions="Center" />

            <Button Text=" Asiakkaiden hallinta"
                BackgroundColor="#2196F3"
                TextColor="White"
                FontSize="18"
                CornerRadius="12"
                Clicked="AvaaAsiakasPage_Clicked"
                HeightRequest="60"
                WidthRequest="250" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>